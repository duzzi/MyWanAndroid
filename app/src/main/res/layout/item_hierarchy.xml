<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_4dp"
    app:cardElevation="4dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_14dp">

        <TextView
            android:id="@+id/tv_parent_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:textColor="@color/textColor333"
            android:textSize="@dimen/text_16sp"
            android:text="111"/>

        <com.duzzi.uilib.viewgroup.FlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flChildSpacing="14dp"
            app:flChildSpacingForLastRow="4dp"
            app:flRowSpacing="6dp">
        </com.duzzi.uilib.viewgroup.FlowLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>